<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paydaybank.android">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PayDayBank">

        <activity android:name=".launcher.LauncherActivity"/>

        <!-- Introduce activity alias to keep app shortcuts if launcher changes in the future -->
        <activity-alias
            android:name=".Launcher"
            android:targetActivity=".launcher.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>

    </application>

</manifest>